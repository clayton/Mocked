<h1>Github User Search</h1>
<% form_tag search_url do %>
  <p><%= text_field_tag :query, params[:query] %>&nbsp;<%= submit_tag "Search" %></p>
<% end %>
<% if flash[:notice].present? %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>
<% if @result %>
  <div id="user">
    <p>Name: <%= @result.name %></p>
    <p>Public Repos: <%= @result.public_repo_count %></p>
    <p>Location: <%= @result.location %></p>
    <p>Login: <%= @result.login %></p>
  </div>
<% end %>